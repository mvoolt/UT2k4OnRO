class ROPlayerReplicationInfo extends xPlayerReplicationInfo;

//=============================================================================
// Variables
//=============================================================================

var	RORoleInfo		RoleInfo;
var	int				FFDamage;

//=============================================================================
// replication
//=============================================================================

replication
{
	reliable if (bNetDirty && (Role == Role_Authority))
		RoleInfo;
}

//=============================================================================
// Functions
//=============================================================================

//-----------------------------------------------------------------------------
// Reset - Don't touch anything
//-----------------------------------------------------------------------------

function Reset()
{
}

simulated function Material getRolePortrait()
{
    if (RoleInfo == none)
        return none;
    else
        return RoleInfo.MenuImage;
}

//=============================================================================
// defaultproperties
//=============================================================================

defaultproperties
{
	bNoTeamSkins=true
	bForceNoPlayerLights=true
}
